
<div class="card my-3">
    <% @posts.each do |post| %>
      <% if post.image.attached? %>
    <div class="card-horizontal">
        <div class="col-5 img-square-wrapper">
            <%= link_to image_tag(post.image, class:'card-img-top img-fluid', :size => '260x180'), post_path(post, category: @category_name, order: @order) %>
        </div>
        <div class="card-body col-7">
            <h4 class="card-title"><%= link_to post.title, root_path() %></h4>
            <p class="card-text"><%= link_to post.review, root_path() %></p>
        </div>
    </div>
      <% end %>
    <% end %>
</div>